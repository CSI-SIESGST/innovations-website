<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    
    <title>Participants</title>

    <script>

function changeFee(userId, graded)
        {
            if(graded == 'true' && !confirm('User is already been graded for round 2.\nDo you want to reset his round 2 grades?'))
            {
                return;
            }

            document.getElementById('loading').style.display = 'block';

            var body = 'key=' + encodeURIComponent('false') + '&id=' + encodeURIComponent(userId);

            fetch("/changeFee", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'                 
                },
                body: body
            })
            .then(response => response.json())
            .then(data => {
                if(data.message == 'done')
                {
                    document.getElementById(userId).remove();
                    alert('Data Changed!')
                    document.getElementById('loading').style.display = 'none';
                }
                else if(data.message == 'nope')
                {
                    document.getElementById('loading').style.display = 'none';
                    alert('Cannot change fee status as user has already not qualified round 1')
                }
                else
                {
                    document.getElementById('loading').style.display = 'none';
                    alert('Error Changing Data')
                }
            })
            .catch(error => {
                document.getElementById('loading').style.display = 'none';
                alert('Error Changing Data')
            })

        }

        function abstractReq(filename) {
            document.getElementById('loading').style.display = 'block';

            var body = 'filename=' + encodeURIComponent(filename);

            fetch("/abstract", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'                 
                },
                body: body
            })
            .then(response => response.json())
            .then(data => {
                if(data.url)
                {
                    window.open(data.url)
                    document.getElementById('loading').style.display = 'none';
                }
                else
                {
                    document.getElementById('loading').style.display = 'none';
                    alert('Error retrieving abstract!');
                }
            })
            .catch(error => {
                document.getElementById('loading').style.display = 'none';
                alert('Error retrieving abstract!');
            })
        }
    </script>
</head>
<body>


    <style>
        details > summary {
          padding: 4px;
          width: 200px;
          background-color: #eeeeee;
          border: none;
          box-shadow: 1px 1px 2px #bbbbbb;
          cursor: pointer;
        }
        
        details > p {
          background-color: #eeeeee;
          padding: 4px;
          margin: 0;
          box-shadow: 1px 1px 2px #bbbbbb;
        }
    </style>


    <div id="loading" style="position: fixed; left: 0; top: 0; height: 100%; width: 100%; background: rgba(255, 255, 255, 0.7); display: none; z-index: 100;">
        <span style="position: absolute; left: 50%; top: 50%; transform: translate(-50%,-50%);"><h2>Sending...</h2></span>
    </div>

    <div>
        <input type="text" name="" id="" class="w-100" placeholder="Search Teams..." onkeyup="searchTeams(this.value);" onchange="searchTeams(this.value);">

        <h5 class="mt-3">Fees Paid</h5>

        <% paid.forEach(user => {
            %>
            <div class="row mx-0 my-4 searchTeam" team="<%= user.teamName %>" id="<%= user._id %>">

                <div class="col-6">
                    <%
                    if(user.uploadLink)
                    {
                        %>Team: <a href="#" onclick="abstractReq('<%= user.uploadLink %>')"><b><%= user.teamName %></b></a><%
                    }
                    else
                    {
                        %>Team: <b><%= user.teamName %></b><%
                    }
                    %>
                    
                </div>
                <div class="col-6">
                    Fee: <span id="<%= user.teamName %>"><b class="text-success">Yes</b></span>

                    <button class="ml-1" onclick="changeFee('<%= user._id %>', '<%= user.graded2 %>')">!</button>
                </div>
                <div class="col-12">
                    
                    <details>
                        <summary class="text-success">Member Details</summary>

                        <p>
                            <div class="row">
                                <div class="col-4" style="overflow-wrap: break-word;">
                                    <b>Email Address</b>
                                </div>
                                <div class="col-3" style="overflow-wrap: break-word;">
                                    <b>Name</b>
                                </div>
                                <div class="col-3" style="overflow-wrap: break-word;">
                                    <b>College</b>
                                </div>
                                <div class="col-2" style="overflow-wrap: break-word;">
                                    <b>Contact</b>
                                </div>
                            </div>
                            <hr class="my-1">

                            <div class="row">
                                <div class="col-4" style="overflow-wrap: break-word;">
                                    <%= user.username %>
                                </div>
                                <div class="col-3" style="overflow-wrap: break-word;">
                                    <%= user.leaderName %>
                                </div>
                                <div class="col-3" style="overflow-wrap: break-word;">
                                    <%= user.leaderCollege %>
                                </div>
                                <div class="col-2" style="overflow-wrap: break-word;">
                                    <%= user.leaderContact %>
                                </div>
                            </div>
                            <hr class="my-1">
                            <% user.teamMembers.forEach(member => {
                                %>
                                <div class="row">
                                    <div class="col-4" style="overflow-wrap: break-word;">
                                        <%= member.email %>
                                    </div>
                                    <div class="col-3" style="overflow-wrap: break-word;">
                                        <%= member.name %>
                                    </div>
                                    <div class="col-3" style="overflow-wrap: break-word;">
                                        <%= member.college %>
                                    </div>
                                    <div class="col-2" style="overflow-wrap: break-word;">
                                        <%= member.contact %>
                                    </div>
                                </div>
                                <hr class="my-1">
                                <%
                            }); %>
                        </p>
                    </details>

                </div>
            </div>
            <%
        }) %> 
    </div>
</body>
</html>