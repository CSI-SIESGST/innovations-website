<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    
    <title>Participants</title>

    <script>
        function changeFee(id, userId)
        {
            if(document.getElementById(id).innerHTML.includes('text-success'))
            {
                document.getElementById('loading').style.display = 'block';

                var body = 'key=' + encodeURIComponent('false') + '&id=' + encodeURIComponent(userId);

                fetch("/changeFee", {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'                 
                    },
                    body: body
                })
                .then(response => response.json())
                .then(data => {
                    if(data.message == 'done')
                    {
                        document.getElementById(id).innerHTML = '<b class="text-danger">No</b>';
                        document.getElementById('loading').style.display = 'none';
                    }
                    else
                    {
                        document.getElementById('loading').style.display = 'none';
                        alert('Error Changing Data')
                    }
                })
                .catch(error => {
                    document.getElementById('loading').style.display = 'none';
                    alert('Error Changing Data')
                })
                
            }
            else
            {
                document.getElementById('loading').style.display = 'block';

                var body = 'key=' + encodeURIComponent('true') + '&id=' + encodeURIComponent(userId);

                fetch("/changeFee", {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'                 
                    },
                    body: body
                })
                .then(response => response.json())
                .then(data => {
                    if(data.message == 'done')
                    {
                        document.getElementById(id).innerHTML = '<b class="text-success">Yes</b>';
                        document.getElementById('loading').style.display = 'none';
                    }
                    else
                    {
                        document.getElementById('loading').style.display = 'none';
                        alert('Error Changing Data')
                    }
                })
                .catch(error => {
                    document.getElementById('loading').style.display = 'none';
                    alert('Error Changing Data')
                })
            }
        }
    </script>
</head>
<body>
    <div id="loading" style="position: absolute; left: 0; top: 0; height: 100%; width: 100%; background: rgba(255, 255, 255, 0.7); display: none; z-index: 100;">
        <span style="position: absolute; left: 50%; top: 50%; transform: translate(-50%,-50%);"><h2>Sending...</h2></span>
    </div>

    <div>
        <div class="text-danger"><small><b>*</b> is for <b>Unverified</b> team.</small></div>
        <% users.forEach(user => {
            %>
            <div class="row mx-0 my-2">

                <div class="col-4">
                    <% if(user.verified)
                    {
                        %>Team: <b><%= user.teamName %></b><%
                    }
                    else
                    {
                        %>Team: <b><%= user.teamName %><span class="text-danger"> *</span></b><%
                    } %>
                    
                </div>
                <div class="col-2">
                    <% if(user.payment)
                    {
                        %>Fee: <span id="<%= user.teamName %>"><b class="text-success">Yes</b></span><%
                    }
                    else
                    {
                        %>Fee: <span id="<%= user.teamName %>"><b class="text-danger">No</b></span><%
                    } %>
                    <button class="ml-1" onclick="changeFee('<%= user.teamName %>', '<%= user._id %>')">!</button>
                </div>
                <div class="col-2">
                    <% if(user.submitted)
                    {
                        %>Abstract: <b class="text-success">Yes</b><%
                    }
                    else
                    {
                        %>Abstract: <b class="text-danger">No</b><%
                    } %>
                </div>
            </div>
            <%
        }) %> 
    </div>
</body>
</html>