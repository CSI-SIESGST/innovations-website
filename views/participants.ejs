<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    
    <title>Participants</title>

    <script>
        function changeFee(id, userId)
        {
            if(document.getElementById(id).innerHTML.includes('text-success'))
            {
                document.getElementById('loading').style.display = 'block';

                var body = 'key=' + encodeURIComponent('false') + '&id=' + encodeURIComponent(userId);

                fetch("/changeFee", {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'                 
                    },
                    body: body
                })
                .then(response => response.json())
                .then(data => {
                    if(data.message == 'done')
                    {
                        document.getElementById(id).innerHTML = '<b class="text-danger">No</b>';
                        document.getElementById('loading').style.display = 'none';
                    }
                    else if(data.message == 'no')
                    {
                        document.getElementById('loading').style.display = 'none';
                        alert('Cannot change fee status as user has already submitted the abstract!')
                    }
                    else
                    {
                        document.getElementById('loading').style.display = 'none';
                        alert('Error Changing Data')
                    }
                })
                .catch(error => {
                    document.getElementById('loading').style.display = 'none';
                    alert('Error Changing Data')
                })
                
            }
            else
            {
                document.getElementById('loading').style.display = 'block';

                var body = 'key=' + encodeURIComponent('true') + '&id=' + encodeURIComponent(userId);

                fetch("/changeFee", {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'                 
                    },
                    body: body
                })
                .then(response => response.json())
                .then(data => {
                    if(data.message == 'done')
                    {
                        document.getElementById(id).innerHTML = '<b class="text-success">Yes</b>';
                        document.getElementById('loading').style.display = 'none';
                    }
                    else
                    {
                        document.getElementById('loading').style.display = 'none';
                        alert('Error Changing Data')
                    }
                })
                .catch(error => {
                    document.getElementById('loading').style.display = 'none';
                    alert('Error Changing Data')
                })
            }
        }

        function changeR1(id, graded2, tn)
        {
            if(graded2 == 'true' && !confirm('User is already graded for round 2!\nThis operation will reset round 2 grade of user.\nDo you want to proceed?'))
            {
                return;
            }
            document.getElementsByName(id)[0].value = '0';
            document.getElementsByName(tn)[0].value = '0';
            if(document.getElementById(id).innerHTML.includes('text-success'))
            {
                document.getElementById('loading').style.display = 'block';

                var body = 'key=' + encodeURIComponent('false') + '&id=' + encodeURIComponent(id);

                fetch("/changeR1", {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'                 
                    },
                    body: body
                })
                .then(response => response.json())
                .then(data => {
                    if(data.message == 'done')
                    {
                        document.getElementById(id).innerHTML = '<b class="text-danger">No</b>';
                        document.getElementById('loading').style.display = 'none';
                    }
                    else if(data.message == 'no')
                    {
                        document.getElementById('loading').style.display = 'none';
                        alert('User has not submitted the abstract!')
                    }
                    else
                    {
                        document.getElementById('loading').style.display = 'none';
                        alert('Error Changing Data')
                    }
                })
                .catch(error => {
                    document.getElementById('loading').style.display = 'none';
                    alert('Error Changing Data')
                })
                
            }
            else
            {
                document.getElementById('loading').style.display = 'block';

                var body = 'key=' + encodeURIComponent('true') + '&id=' + encodeURIComponent(id);

                fetch("/changeR1", {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'                 
                    },
                    body: body
                })
                .then(response => response.json())
                .then(data => {
                    if(data.message == 'done')
                    {
                        document.getElementById(id).innerHTML = '<b class="text-success">Yes</b>';
                        document.getElementById('loading').style.display = 'none';
                    }
                    else if(data.message == 'no')
                    {
                        document.getElementById('loading').style.display = 'none';
                        alert('User has not submitted the abstract!')
                    }
                    else
                    {
                        document.getElementById('loading').style.display = 'none';
                        alert('Error Changing Data')
                    }
                })
                .catch(error => {
                    document.getElementById('loading').style.display = 'none';
                    alert('Error Changing Data')
                })
            }
        }

        function changeR2(id,name)
        {
            if(document.getElementsByName(id)[0].getAttribute('readonly') == '')
            {
                document.getElementsByName(id)[0].style.background = 'rgb(255,255,255)';
                document.getElementsByName(id)[0].removeAttribute('readonly');
                document.getElementsByName(id)[0].focus();
                document.getElementsByName(id)[0].value = '';
            }
            else if(document.getElementsByName(id)[0].value != '' && parseInt(document.getElementsByName(id)[0].value) >= 0 && parseInt(document.getElementsByName(id)[0].value) < 101)
            {
                document.getElementById('loading').style.display = 'block';

                var body = 'key=' + encodeURIComponent(Math.round(document.getElementsByName(id)[0].value)) + '&id=' + encodeURIComponent(id);

                fetch("/changeR2", {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'                 
                    },
                    body: body
                })
                .then(response => response.json())
                .then(data => {
                    if(data.message == 'done')
                    {
                        document.getElementsByClassName(id)[0].setAttribute('disabled','')
                        document.getElementsByName(id)[0].value = Math.round(document.getElementsByName(id)[0].value)
                        document.getElementsByName(name)[0].value = document.getElementsByName(id)[0].value;
                        document.getElementsByName(id)[0].style.background = '#eee';
                        document.getElementsByName(id)[0].setAttribute('readonly', '');
                        document.getElementById('loading').style.display = 'none';
                    }
                    else if(data.message == 'no')
                    {
                        document.getElementsByName(id)[0].value = document.getElementsByName(name)[0].value;
                        document.getElementsByName(id)[0].style.background = '#eee';
                        document.getElementsByName(id)[0].setAttribute('readonly', '');
                        document.getElementById('loading').style.display = 'none';
                        alert('User has not been selected in round 2!')
                    }
                    else
                    {
                        document.getElementsByName(id)[0].value = document.getElementsByName(name)[0].value;
                        document.getElementsByName(id)[0].style.background = '#eee';
                        document.getElementsByName(id)[0].setAttribute('readonly', '');
                        document.getElementById('loading').style.display = 'none';
                        alert('Error Changing Data');
                    }
                })
                .catch(error => {
                    document.getElementsByName(id)[0].value = document.getElementsByName(name)[0].value;
                    document.getElementsByName(id)[0].style.background = '#eee';
                    document.getElementsByName(id)[0].setAttribute('readonly', '');
                    document.getElementById('loading').style.display = 'none';
                    alert('Error Changing Data');
                })
            }
            else
            {
                document.getElementsByName(id)[0].value = document.getElementsByName(name)[0].value;
                document.getElementsByName(id)[0].style.background = '#eee';
                document.getElementsByName(id)[0].setAttribute('readonly', '');
                document.getElementById('loading').style.display = 'none';
                alert('The value should be between 0 and 100 inclusive!');
            }
        }

        function searchTeams(val)
        {
            var team = document.getElementsByClassName('searchTeam');

            for(var i=0; i<team.length; i++)
            {
                if(team[i].getAttribute('team').toLowerCase().trim().startsWith(val.toLowerCase().trim()))
                {
                    team[i].style.display = 'flex';
                }
                else
                {
                    team[i].style.display = 'none';
                }
            }
        }
    </script>
</head>
<body>


    <style>
        details > summary {
          padding: 4px;
          width: 200px;
          background-color: #eeeeee;
          border: none;
          box-shadow: 1px 1px 2px #bbbbbb;
          cursor: pointer;
        }
        
        details > p {
          background-color: #eeeeee;
          padding: 4px;
          margin: 0;
          box-shadow: 1px 1px 2px #bbbbbb;
        }
    </style>


    <div id="loading" style="position: fixed; left: 0; top: 0; height: 100%; width: 100%; background: rgba(255, 255, 255, 0.7); display: none; z-index: 100;">
        <span style="position: absolute; left: 50%; top: 50%; transform: translate(-50%,-50%);"><h2>Sending...</h2></span>
    </div>

    <div>
        <input type="text" name="" id="" class="w-100" placeholder="Search Teams..." onkeyup="searchTeams(this.value);" onchange="searchTeams(this.value);">
        <div class="text-danger"><small><b>*</b> is for <b>Unverified</b> team.</small></div>
        <% users.forEach(user => {
            %>
            <div class="row mx-0 my-4 searchTeam" team="<%= user.teamName %>">

                <div class="col-4">
                    <% if(user.verified)
                    {
                        if(user.uploadLink)
                        {
                            %>Team: <a href="<%= user.uploadLink %>" target="_blank"><b><%= user.teamName %></b></a><%
                        }
                        else
                        {
                            %>Team: <b><%= user.teamName %></b><%
                        }
                        
                    }
                    else
                    {
                        %>Team: <b><%= user.teamName %><span class="text-danger"> *</span></b><%
                    } %>
                    
                </div>
                <div class="col-2">
                    <% if(user.payment)
                    {
                        %>Fee: <span id="<%= user.teamName %>"><b class="text-success">Yes</b></span><%
                    }
                    else
                    {
                        %>Fee: <span id="<%= user.teamName %>"><b class="text-danger">No</b></span><%
                    } %>
                    <button class="ml-1" onclick="changeFee('<%= user.teamName %>', '<%= user._id %>')">!</button>
                </div>
                <div class="col-2">
                    <% if(user.submitted)
                    {
                        %>Abstract: <b class="text-success">Yes</b><%
                    }
                    else
                    {
                        %>Abstract: <b class="text-danger">No</b><%
                    } %>
                </div>
                <div class="col-2">
                    <% if(user.status1)
                    {
                        %>R1: <span id="<%= user._id %>"><b class="text-success">Yes</b></span><%
                    }
                    else
                    {
                        %>R1: <span id="<%= user._id %>"><b class="text-danger">No</b></span><%
                    } %>
                    <button class="ml-1 <%= user._id %>" onclick="changeR1('<%= user._id %>','<%= user.graded2 %>','<%= user.teamName %>')">!</button>
                </div>
                <div class="col-2">
                    <input type="number" style="background: #eee;" class="w-75" name="<%= user._id %>" id="" value="<%= user.status2 %>" step="1" min="0" max="100" readonly>
                    <input type="hidden" name="<%= user.teamName %>" id="" value="<%= user.status2 %>">
                    <button class="ml-1" onclick="changeR2('<%= user._id %>', '<%= user.teamName %>')">!</button>
                </div>
                <div class="col-12">
                    
                    <details>
                        <% if(user.teamConfirm) { %>
                            <summary class="text-success">Member Details</summary>
                        <% } else { %>
                            <summary class="text-danger">Member Details</summary>
                        <% } %>

                        <p>
                            <div class="row">
                                <div class="col-4" style="overflow-wrap: break-word;">
                                    <b>Email Address</b>
                                </div>
                                <div class="col-3" style="overflow-wrap: break-word;">
                                    <b>Name</b>
                                </div>
                                <div class="col-3" style="overflow-wrap: break-word;">
                                    <b>College</b>
                                </div>
                                <div class="col-2" style="overflow-wrap: break-word;">
                                    <b>Contact</b>
                                </div>
                            </div>
                            <hr class="my-1">

                            <div class="row">
                                <div class="col-4" style="overflow-wrap: break-word;">
                                    <%= user.username %>
                                </div>
                                <div class="col-3" style="overflow-wrap: break-word;">
                                    <%= user.leaderName %>
                                </div>
                                <div class="col-3" style="overflow-wrap: break-word;">
                                    <%= user.leaderCollege %>
                                </div>
                                <div class="col-2" style="overflow-wrap: break-word;">
                                    <%= user.leaderContact %>
                                </div>
                            </div>
                            <hr class="my-1">
                            <% user.teamMembers.forEach(member => {
                                %>
                                <div class="row">
                                    <div class="col-4" style="overflow-wrap: break-word;">
                                        <%= member.email %>
                                    </div>
                                    <div class="col-3" style="overflow-wrap: break-word;">
                                        <%= member.name %>
                                    </div>
                                    <div class="col-3" style="overflow-wrap: break-word;">
                                        <%= member.college %>
                                    </div>
                                    <div class="col-2" style="overflow-wrap: break-word;">
                                        <%= member.contact %>
                                    </div>
                                </div>
                                <hr class="my-1">
                                <%
                            }); %>
                        </p>
                    </details>

                </div>
            </div>
            <%
        }) %> 
    </div>
</body>
</html>