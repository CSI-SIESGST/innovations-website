		<script>
			function signupReq() {
				var form = new FormData(document.getElementById('signup'));
				var formBody = [];
				for (var key of form.keys()) {
					var encodedKey = encodeURIComponent(key);
					var encodedValue = encodeURIComponent(form.get(key));
					formBody.push(encodedKey + '=' + encodedValue);
				}
				formBody = formBody.join('&');
				fetch('/signup', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/x-www-form-urlencoded'
					},
					body: formBody
				})
					.then((response) => response.json())
					.then((data) => {
						if (data.message == 'done') {
							location.replace('/home');
						} else {
							document.getElementById('status').innerHTML =
								data.message;
							if (
								data.message ==
								"Password doesn't satisfy the conditions!"
							) {
								alert(
									'Password must be 8 characters long\nIt should have at least one UpperCase character, LowerCase character, Number, Special Symbol.'
								);
							}
						}
					})
					.catch((error) => {
						document.getElementById('status').innerHTML =
							'Server Error!';
					});
			}

			document
				.getElementById('signup')
				.addEventListener('submit', (event) => {
					event.preventDefault();
					if (
						document.getElementById('inputPassword1').innerText !==
						document.getElementById('confirmPassword1').innerText
					) {
						document.getElementById('status').innerText =
							"Passwords don't match";
					} else {
						signupReq();
					}
				});
		</script>
