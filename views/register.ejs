<!DOCTYPE html>
<html>
	<head>
		<title>REGISTER</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width = device-width, initial-scale=1" />
		<link
			rel="stylesheet"
			href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
		/>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
		<link rel="stylesheet" href="css/styles.css" />
		<link rel="preconnect" href="https://fonts.gstatic.com" />
		<link
			href="https://fonts.googleapis.com/css2?family=Rubik&display=swap"
			rel="stylesheet"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
		/>
	</head>

	<body style="background-color: #5390f5; padding: 30px">
		<div class="container row" id="register">
			<div
				class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 align-self-center justify-content-center"
			>
				<img
					src="images/register.png"
					class="img-fluid w-100"
					alt="Responsive image"
				/>
			</div>

			<!--Form-->
			<div
				class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 align-self-center justify-content-center"
			>
				<form id="signup">
					<label id="status" class="text-danger"></label>
					<div class="form-row">
						<div class="form-group col-sm-6">
							<label for="firstname1">Team Name</label>
							<input
								type="text"
								name="team"
								class="form-control"
								id="firstname1"
								placeholder="Team Name"
							/>
						</div>
						<div class="form-group col-sm-6">
							<label for="lastname1">Leader's Full Name</label>
							<input
								type="text"
								name="leadername"
								class="form-control"
								id="lastname1"
								placeholder="Full Name"
							/>
						</div>
					</div>
					<div class="form-group">
						<label for="collegename1">Leader's College Name</label>
						<input
							type="text"
							class="form-control"
							name="college"
							id="collegename1"
							placeholder="College Name"
						/>
					</div>
					<div class="form-group">
						<label for="contactnumber1">Leader's Contact Number</label>
						<input
							type="tel"
							class="form-control"
							name="contact"
							id="contactnumber1"
							placeholder="Contact number"
						/>
					</div>
					<div class="form-group">
						<label for="email1">Leader's Email ID</label>
						<input
							type="email"
							class="form-control"
							name="username"
							id="email1"
							placeholder="Email Address"
						/>
					</div>
					<div class="form-row">
						<div class="form-group col-sm-6">
							<label for="inputPassword1">Password</label>
							<input
								type="password"
								class="form-control"
								name="password"
								id="inputPassword1"
								placeholder="********"
							/>
						</div>
						<div class="form-group col-sm-6">
							<label for="confirmPassword1">Confirm Password</label>
							<input
								type="password"
								class="form-control"
								id="confirmPassword1"
								placeholder="********"
								name="passwordagain"
							/>
						</div>
					</div>
					<button type="submit" class="btn btn-primary btn-block">
						Register
					</button>
				</form>
			</div>
		</div>
		<script>
			function signupReq() {
				var form = new FormData(document.getElementById('signup'));
				var formBody = [];
				for (var key of form.keys()) {
					var encodedKey = encodeURIComponent(key);
					var encodedValue = encodeURIComponent(form.get(key));
					formBody.push(encodedKey + '=' + encodedValue);
				}
				formBody = formBody.join('&');
				fetch('/signup', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/x-www-form-urlencoded'
					},
					body: formBody
				})
					.then((response) => response.json())
					.then((data) => {
						if (data.message == 'done') {
							location.replace('/home');
						} else {
							document.getElementById('status').innerHTML =
								data.message;
						}
					})
					.catch((error) => {
						document.getElementById('status').innerHTML =
							'Server Error!';
					});
			}

			document
				.getElementById('signup')
				.addEventListener('submit', (event) => {
					event.preventDefault();
					if (
						document.getElementById('inputPassword1').innerText !==
						document.getElementById('confirmPassword1').innerText
					) {
						document.getElementById('status').innerText =
							"Passwords don't match";
					} else {
						signupReq();
					}
				});
		</script>
	</body>
</html>
